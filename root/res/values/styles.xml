<resources>

    <!-- Base application theme. -->
    <style name="AppTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:colorBackground">@color/white</item>
        <item name="android:actionBarSize">@dimen/dimen_48dp</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="actionBarSize">@dimen/dimen_48dp</item>
    </style>

    <style name="AppTheme" parent="AppTheme.Base">
        <item name="windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="FullBleedTheme" parent="android:Theme.Light.NoTitleBar.Fullscreen"></style>

    <style name="ActionBarTheme" parent="android:Theme.Light"></style>

    <style name="shopTheem" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorAccent">@color/colorAccent</item>
        <!-- 溢出菜单图标颜色-->
        <item name="colorControlNormal">@android:color/white</item>
        <!-- 溢出菜单文字颜色-->
        <item name="textAppearanceLargePopupMenu">@style/OverflowMenuTextAppearance</item>
        <!-- 左边箭头 -->
        <item name="drawerArrowStyle">@style/left_Drawer_Arrow_Style</item>
        <item name="android:actionMenuTextColor">@color/white</item>
    </style>

    <style name="editTheem" parent="AppTheme.Base">
        <!-- 溢出菜单图标颜色-->
        <item name="colorControlNormal">@android:color/white</item>
        <!-- 溢出菜单文字颜色-->
        <item name="textAppearanceLargePopupMenu">@style/OverflowMenuTextAppearance</item>
        <!-- 左边箭头 -->
        <item name="drawerArrowStyle">@style/left_Drawer_Arrow_Style</item>
        <item name="android:actionMenuTextColor">@color/white</item>
    </style>

    <style name="repoTheem" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- 溢出菜单图标颜色-->
        <item name="colorControlNormal">@android:color/white</item>
        <!-- 溢出菜单文字颜色-->
        <item name="textAppearanceLargePopupMenu">@style/OverflowMenuTextAppearance</item>
        <!-- 左边箭头 -->
        <item name="drawerArrowStyle">@style/left_Drawer_Arrow_Style</item>
        <item name="android:actionMenuTextColor">@color/white</item>
    </style>

    <!-- 左边的箭头指示-->
    <style name="left_Drawer_Arrow_Style" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@android:color/white</item>
    </style>

    <style name="OverflowMenuTextAppearance">
        <item name="android:typeface">serif</item>
        <item name="android:textSize">@dimen/font_normal</item>
    </style>

    <style name="dialog_style" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item><!-- 边框 -->
        <item name="android:windowIsFloating">true</item><!-- 是否浮现在activity之上 -->
        <item name="android:windowIsTranslucent">false</item><!-- 半透明 -->
        <item name="android:windowNoTitle">true</item><!-- 无标题 -->
        <item name="android:windowBackground">@color/color_000000</item><!-- 自己想要的背景 -->
        <item name="android:backgroundDimEnabled">true</item><!-- 模糊 -->
        <item name="android:background">@color/color_000000</item>
        <item name="android:layout_width">fill_parent</item>
    </style>

    <style name="MyDialogStyle">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

</resources>
